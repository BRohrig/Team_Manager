
<%= link_to "Trade Eligible Players", "/players?eligible=true" %>
<h2><%= @header %></h2>
<% @players.each do |player| %>
  <h3><%= player.name %></h3>
  <h4>Salary: $<%= player.salary %></h4>
  <h4>US Citizen? <%= player.citizen %></h4>
  <h4>Eligible for Trade? <%= player.trade_eligible %></h4>
  <h4>Contract Length in Months: <%= player.contract_length_months %></h4><br/>
  <h4>Team ID: <%= player.team_id %></h4>
  <%= link_to "Edit #{player.name}", "/players/#{player.id}/edit", method: :patch %>
  <%= link_to "Delete #{player.name}", "/players?id=#{player.id}", method: :delete %>
<% end %>